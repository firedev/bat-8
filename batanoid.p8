-- level
function init_level()
	local level = {
		current = 1,
		blocks={5,6,7,8,9},
		offset={
			x=4,
			y=0,
		},
		draw = function(self)
			for x=0,14 do
				for y=0,7 do
					spr(
						mget((self.current-1)*16+x,y),
						self.offset.x+x*8,
						self.offset.y+y*8
					)
				end
			end
		end
	}
	return level
end

