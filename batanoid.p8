-- game state
function init_game(initial_state)
	local game = {
		lives=3,
		level=1,
		to_state = function(self, state)
			local state = self.states[state]
			state.update()
			self.state = state
		end,
		update = function(self)
			self.state.update()
		end,
		draw = function(self)
			self.state.draw()
		end,
	}
	game.states = init_states(game)
	game:to_state(initial_state)
	return game
end


function init_states(game)
	local running = {
		update = function()
			bat:update()
			ball:update()
		end,
		draw = function()
			level:draw()
			bat:draw()
			ball:draw()
		end
	}
	local welcome = {
		update = function()
			if(btn(❎)) game:to_state("running")
		end,
		draw = function()
			for x=0,7 do
				for y=0,1 do
					spr(64+x+y*16,29+x*8,40+y*8)
				end
			end
			rect(0,0,127,127,7)
			print ("press ❎ to start",30,72)
		end
	}

	local states =  { 
		welcome = welcome,
		running = running,
	}
	return states
end

